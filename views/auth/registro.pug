extends ../layout/index

block contenido
	.py-10
		h1.text-4xl.my-10.text-center.font-extra-bold Inmo
			span(class="text-purple-500 font-bold m-1") Puebla  
		h2.text-center.text-2xl.font-extrabold= pagina


		if errores 	
			div(class="max-w-md mx-auto my-10")
				each error in errores
					p.bg-purple-800.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

		.mt-8.mx-auto.max-w-md
			.bg-white.py-8.px-4.shadow
		
				form.space-y-5(method="POST" action="/auth/registro" )
					div
						label.block.text-sm.uppercase.text-gray-500.font-bold.mb-3.rounded-md(for="nombre") Tu Nombre 
						input#nombre.w-full.px-3.py-2.border.border-gray-500.placeholder-pink-600(placeholder="" type="text" name="nombre"  value=  usuario? usuario.nombre : "")
					div
						label.block.text-sm.uppercase.text-gray-500.font-bold.mb-3.rounded-md(for="email") Tu email 
						input#mail.w-full.px-3.py-2.border.border-gray-500.placeholder-pink-600(placeholder="" type="email" name="email" value= usuario ? usuario.email  : "")
					div
						label.block.text-sm.uppercase.text-gray-500.font-bold.mb-3.rounded-md(for="password")  Tu Contrase単a 
						input#password.w-full.px-3.py-2.border.border-gray-500.placeholder-pink-600(placeholder="" type="password" name="password" )
					div
						label.block.text-sm.uppercase.text-gray-500.font-bold.mb-3.rounded-md(for="repetir_password") Repite Contrase単a  
						input#password.w-full.px-3.py-2.border.border-gray-500.placeholder-pink-600(placeholder="" type="password" name="repetir_password" )
					
					input(class="w-full bg-purple-500 rounded-md text-white hover:bg-pink-700 py-3 cursor-pointer " type="submit" value="Crear Cuenta")
					//- =============================  Links 
					div(class="flex items-center justify-between")
						a(class="text-gray-400 text-xs")(href="/auth/login") 多Ya tienes Cuenta? Inicia Sesion
						a(class="text-gray-400 text-xs")(href="/auth/olvidar") Olvide mi Contrase単a
						